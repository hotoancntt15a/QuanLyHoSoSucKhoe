@{
    ViewBag.Title = "info";
    Layout = null;
    if(ViewBag.data == null)
    {
        <div class="alert alert-info">Không có dữ liệu tìm kiếm</div>
        return;
    }
    var data = ViewBag.data as System.Data.DataTable;
}
<table class="table table-hover table-bordered">
    <thead>
        <tr>
            @foreach(System.Data.DataColumn c in data.Columns)
            {
                <th>@c.ColumnName</th>
            }
        </tr>
    </thead>
    <tbody>
        @foreach(System.Data.DataRow r in data.Rows)
        {
            <tr>
                @for(int i = 0; i < data.Columns.Count; i++)
                {
                    <td>@r[i]</td>
                }
            </tr>
        }
    </tbody>
</table>

