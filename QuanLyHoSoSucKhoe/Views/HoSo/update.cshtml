@{
    ViewBag.Title = "Thêm mới hồ sơ sức khỏe";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<form method="post" name="frmAddHoSo">
    <div class="form-group">
        <div class="input-group input-group-sm">
            <div class="input-group-append"><div class="input-group-text">1. Họ tên: </div></div>
            <input type="text" maxlength="255" name="hoten" class="form-control" />
        </div>
        <div class="input-group input-group-sm">
            <div class="input-group-append"><div class="input-group-text">2. Giới tính: </div></div> 
            <select name="gioitinh" class="custom-select-sm">
                <option value="Nam">Nam</option>
                <option value="Nam">Nữ</option>
            </select>
            <div class="input-group-append"><div class="input-group-text">Ngày sinh: </div></div>
            <input type="text" maxlength="10" name="ngaysinh" class="form-control clsdate" placeholder="Ngày/tháng/năm" style="width: 100px;" />
        </div>
        <div class="input-group input-group-sm">
            <div class="input-group-append"><div class="input-group-text">3. CMND: </div></div>
            <input type="text" maxlength="20" name="cmndhochieu" class="form-control" />
            <div class="input-group-append"><div class="input-group-text">Cấp ngày: </div></div>
            <input type="text" maxlength="10" name="capngay" class="form-control clsdate" placeholder="Ngày/tháng/năm" style="width: 100px;" />
            <div class="input-group-append"><div class="input-group-text">Nơi cấp: </div></div>
            <input type="text" maxlength="255" name="noicap" class="form-control" />
        </div>
        <div class="input-group input-group-sm">
            <div class="input-group-append"><div class="input-group-text">4. Hộ khẩu thường trú: </div></div>
            <input type="text" maxlength="255" name="hokhauthuongtru" class="form-control" />
        </div>
        <div class="input-group input-group-sm">
            <div class="input-group-append"><div class="input-group-text">5. Chỗ ở hiện tại: </div></div>
            <input type="text" maxlength="255" name="noiohientai" class="form-control" />
        </div>
        <div class="input-group input-group-sm">
            <div class="input-group-append"><div class="input-group-text">6. Nghề nghiệp: </div></div>
            <input type="text" maxlength="255" name="nghenghiep" class="form-control" />
        </div>
        <div class="input-group input-group-sm">
            <div class="input-group-append"><div class="input-group-text">7. Nơi công tác, học tập: </div></div>
            <input type="text" maxlength="255" name="noicongtac" class="form-control" />
        </div>
        <div class="input-group input-group-sm">
            <div class="input-group-append"><div class="input-group-text">8. Ngày bắt đầu vào học/làm việc tại đơn vị hiện nay: </div></div>
            <input type="text" maxlength="255" name="ngaycongtachientai" class="form-control clsdate" placeholder="Ngày/tháng/năm" />
        </div>
        <div class="input-group input-group-sm">
            <div class="input-group-append"><div class="input-group-text">9. Nghề, công việc trước đây: </div></div>
        </div>
        <div class="input-group input-group-sm">
            <table class="table table-hover table-bordered">
                <thead>
                    <tr>
                        <th>Từ ngày</th><th>Đến ngày</th><th>Nghề, công việc</th>
                    </tr>
                </thead>
                <tbody>

                </tbody>
            </table>
        </div>
    </div> 
</form>

