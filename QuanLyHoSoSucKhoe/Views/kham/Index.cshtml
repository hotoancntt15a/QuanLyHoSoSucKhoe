                <tr><td><a href="javascript:void(0);"> <i class="fa fa-plus"></i> Khám Răng-Hàm-Mặt </a></td></tr>
                <tr><td><a href="javascript:void(0);"> <i class="fa fa-plus"></i> Khám Da Liễu </a></td></tr>
            </tbody>
        </table>
    </div>
</div>
<script>
    $(document).ready(function () { 
        var urlCurrent = encodeURIComponent(window.location.href);
        var link = $('#dsnguoikham>tfoot').find('a').first();
        $(link).attr('href', $(link).attr('href') + '?redirect=' + urlCurrent);
    });
</script>
