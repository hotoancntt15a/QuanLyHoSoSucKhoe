@{
    ViewBag.Title = "Khám định kỳ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <div class="col-sm-12">
        <table class="table table-hover" id="dsnguoikham">
            <thead>
                <tr>
                    <th colspan="2">Danh sách khám định kỳ</th>
                </tr>
                <tr>
                    <th>Ngày</th>
                    <th>Đối tượng (Tên + Sdt + đơn vị công tác)</th>
                </tr>
            </thead>
            <tbody></tbody>
            <tfoot>
                <tr>
                    <td colspan="2">
                        <a href="@Url.Action("update", "HoSo", new { area = ""})" class="btn btn-primary btn-sm"><i class="fa fa-plus"></i> Thêm mới hồ sơ</a>
                        <a href="@Url.Action("update", "HoSo", new { area = ""})" class="btn btn-primary btn-sm"><i class="fa fa-plug"></i> Thêm mới từ hồ sơ đã có</a>
                    </td>
                </tr>
            </tfoot>
        </table>
    </div>
    <div class="col-sm-12"> 
        <table class="table table-hover" id="dskham">
            <thead>
                <tr>
                    <th>Danh sách các mục khám</th>
                </tr>
            </thead>
            <tbody>
                <tr><td><a href="javascript:void(0);"> <i class="fa fa-plus"></i> Khám thể lực </a></td></tr>
                <tr><td><a href="javascript:void(0);"> <i class="fa fa-plus"></i> Khám Nội khoa </a></td></tr>
                <tr><td><a href="javascript:void(0);"> <i class="fa fa-plus"></i> Khám Mắt </a></td></tr>
