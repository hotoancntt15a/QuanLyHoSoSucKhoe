@{
    Layout = "~/Views/Shared/_LayoutNotLogin.cshtml";
    ViewBag.Title = "Đăng nhập";
    var redirect = $"{Request["w"]}";
}
<div class="card card-login mx-auto mt-5">
    <div class="card-header">Đăng nhập vào hệ thống</div>
    <div class="card-body">
        <form method="post">
            <div class="form-group">
                <div class="input-group input-group-sm">
                    <div class="input-group-append"><div class="input-group-text">Tên đăng nhập</div></div>
                    <input class="form-control" id="inputuser" name="username" type="text" aria-describedby="emailHelp" placeholder="Nhập tên đăng nhập hoặc địa chỉ email">
                </div>
            </div>
            <div class="form-group">
                <div class="input-group input-group-sm">
                    <div class="input-group-append"><div class="input-group-text">Mật khẩu</div></div>
                    <input class="form-control" id="inputpass" name="password" type="password" placeholder="Nhập mật khẩu">
                </div>
            </div>
            <div class="custom-control custom-checkbox">
                <input class="custom-control-input" id="inputcheck" type="checkbox" name="remmember" value="1">
                <label class="custom-control-label" for="inputcheck">Nhớ đăng nhập</label>
            </div>
            @if (ViewBag.Error != null)
            { <div class="alert alert-warning">@Html.Raw(ViewBag.Error)</div> }
            <button class="btn btn-primary btn-block" type="submit">Đăng nhập</button>
        </form>
    </div>
</div> 
@section scripts {
    <script>
        var redirect = '@redirect';
        if (redirect.startsWith('http://')) { window.open(redirect, '_blank'); }
    </script>
}